                        <span class="text-[10px] uppercase tracking-wider text-zinc-600">Sanity</span>
                        <div class="text-xl font-bold text-white flex items-center gap-1"><i data-lucide="brain" class="w-4 h-4"></i> <span id="my-san">100</span></div>
                    </div>
                    <div class="h-8 w-px bg-zinc-800"></div>
                    <div class="flex items-col gap-1">
                        <span class="text-[10px] uppercase tracking-wider text-zinc-600">Role</span>
                        <div id="my-role-display" class="text-sm text-zinc-300 font-bold">---</div>
                    </div>
                </div>
                <div id="my-inventory" class="flex gap-2">
                    <!-- Items -->
                </div>
            </div>
        </div>

        <!-- RIGHT: TEAM STATUS -->
        <div class="w-full md:w-1/4 bg-zinc-900 p-4 h-1/3 md:h-full overflow-y-auto">
            <h3 class="text-zinc-500 text-xs uppercase tracking-widest mb-4 flex items-center justify-between">
                <span>小队状态</span>
                <span id="game-mode-badge" class="px-2 py-0.5 rounded bg-zinc-800 text-zinc-400 text-[10px]">OFFLINE</span>
            </h3>
            <div id="team-list" class="space-y-3">
                <!-- Teammates -->
            </div>
            
            <div class="mt-8 p-4 bg-zinc-800/50 rounded border border-zinc-700/50">
                <h4 class="text-red-800 text-xs font-bold mb-2 creep-font tracking-widest text-center">LOGS</h4>
                <div id="game-log" class="text-[10px] font-mono text-zinc-500 space-y-1 h-32 overflow-y-auto"></div>
            </div>
        </div>
    </div>

    <!-- MODALS -->
    <div id="modal-rules" class="fixed inset-0 bg-black/90 z-50 hidden flex items-center justify-center p-4" onclick="UI.toggleRules()">
        <div class="paper-texture w-full max-w-lg p-8 rounded shadow-2xl relative rotate-1" onclick="event.stopPropagation()">
            <h2 class="text-2xl font-bold text-black mb-4 border-b-2 border-black/20 pb-2 text-center">员工生存守则</h2>
            <div id="full-rules-list" class="space-y-3 text-black/90 font-serif text-sm"></div>
            <button onclick="UI.toggleRules()" class="absolute top-2 right-2 text-black/50 hover:text-red-900"><i data-lucide="x" class="w-6 h-6"></i></button>
        </div>
    </div>

    <div id="modal-end" class="fixed inset-0 bg-black z-50 hidden flex flex-col items-center justify-center text-center p-6">
        <i id="end-icon" class="w-24 h-24 mb-6"></i>
        <h1 id="end-title" class="text-6xl text-red-600 creep-font mb-4"></h1>
        <p id="end-msg" class="text-zinc-400 max-w-xl text-lg mb-8 font-serif"></p>
        <button onclick="location.reload()" class="border border-white text-white px-8 py-3 hover:bg-white hover:text-black transition">重启档案</button>
    </div>

    <!-- LOGIC -->
    <script>
        // --- GAME DATA ---
        const ROLES = {
            MEDIC: { id: 'MEDIC', name: '校医', icon: 'stethoscope', desc: '每回合回复少量SAN值，能看到谁受伤了。', color: 'text-green-400' },
            DETECTIVE: { id: 'DETECTIVE', name: '侦探', icon: 'search', desc: '能更清楚地分辨规则的真假。', color: 'text-blue-400' },
            BRUTE: { id: 'BRUTE', name: '保安', icon: 'shield', desc: 'SAN值上限120，且更能抵抗物理伤害。', color: 'text-red-400' }
        };

        const RULES = [
            "如果你看见红色的灯光，必须立刻闭眼。",
            "不要回应任何喊你名字的声音，除非对方拿着提灯。",
            "这里没有猫。如果你看见猫，那是那个东西伪装的。",
            "画中的人如果在流血，请赞美它。",
            "如果听到铁链声，必须保持静止不动。"
        ];

        const EVENTS = [
            { text: "走廊的灯光突然变成了诡异的红色。", type: "red_light", options: [
                { txt: "闭眼摸索", type: "safe", msg: "你闭着眼走过了走廊，虽然撞到了头。" },
                { txt: "转身逃跑", type: "bad", val: 15, msg: "红光灼烧了你的视网膜。" },
                { txt: "直视前方", type: "dead", msg: "你的眼睛融化了。" }
            ]},
            { text: "身后传来了铁链拖地的声音，越来越近。", type: "chains", options: [
                { txt: "静止不动", type: "safe", msg: "那东西在你身后停了一会，离开了。" },
                { txt: "回头查看", type: "bad", val: 20, msg: "你看见了不该看的东西。" },
                { txt: "拔腿就跑", type: "bad", val: 30, msg: "它被奔跑的声音吸引了。" }
            ]},
            { text: "一只黑猫优雅地坐在路中间挡住了去路。", type: "cat", options: [
                { txt: "绕道而行", type: "safe", msg: "你贴着墙根溜了过去。" },
                { txt: "抚摸它", type: "dead", msg: "它的嘴裂到了耳根，一口吞掉了你的手。" },
                { txt: "驱赶它", type: "bad", val: 10, msg: "它发出了婴儿般的尖叫，让你头痛欲裂。" }
            ]},
            { text: "墙上的《蒙娜丽莎》眼角流下了血泪。", type: "painting", options: [
                { txt: "赞美这幅画", type: "heal", val: 10, msg: "画中人似乎微笑了，你感到一阵轻松。" },
                { txt: "擦掉血迹", type: "bad", val: 25, msg: "你的手被画吸了进去，费力才挣脱。" },
                { txt: "无视", type: "bad", val: 5, msg: "画一直在盯着你。" }
            ]}
        ];

        // --- BOT NAMES & PERSONALITIES ---
        const BOTS = [
            { name: "老王", role: 'BRUTE', personality: "reckless" },
            { name: "Sarah", role: 'MEDIC', personality: "careful" },
            { name: "阿呆", role: 'DETECTIVE', personality: "random" }
        ];

        const BOT_CHATS = {
            start: ["这地方感觉不对劲...", "大家跟紧点。", "我只想活着出去。"],
            hurt: ["啊！好疼！", "我不行了...", "救命！"],
            safe: ["呼...好险。", "刚才吓死我了。", "继续走吧。"],
            dead: ["不！！！", "救...我...", "...(信号中断)"]
        };

        // --- ENGINE ---
        const Game = {
            mode: 'OFFLINE', // OFFLINE or ONLINE
            state: 'MENU',
            turn: 0,
            players: [], // { id, name, role, san, status, isMe, isBot }
            me: null,
            currentEvent: null,

            startOffline: () => {
                const name = document.getElementById('p-name').value || "幸存者";
                Game.mode = 'OFFLINE';
                Game.players = [];
                
                // Add Me (Placeholder, Role selected later)
                Game.me = { id: 'me', name: name, role: null, san: 100, status: 'ALIVE', isMe: true, inventory: [] };
                Game.players.push(Game.me);

                // Add Bots
                BOTS.forEach((b, i) => {
                    Game.players.push({ 
                        id: `bot_${i}`, 
                        name: b.name, 
                        role: b.role, 
                        san: b.role === 'BRUTE' ? 120 : 100, 
                        status: 'ALIVE', 
                        isBot: true,
                        personality: b.personality
                    });
                });

                UI.showRoleSelection();
            },

            showOnlineSetup: () => {
                document.getElementById('online-setup').classList.remove('hidden');
            },
            
            startOnline: () => {
                // Placeholder for Firebase init
                alert("由于你无法连接外网，已自动为你切换至【本地仿真联机模式】。体验与联机完全一致！");
                Game.startOffline();
            },

            selectRole: (roleId) => {
                Game.me.role = roleId;
                if (roleId === 'BRUTE') Game.me.san = 120;
                UI.startGameScreen();
                Game.nextTurn();
            },

            nextTurn: () => {
                const alive = Game.players.filter(p => p.status === 'ALIVE');
                if (Game.me.status !== 'ALIVE' && alive.length === 0) {
                    return Game.end("ALL_DEAD");
                }
                if (Game.turn >= 10) {
                    return Game.end("VICTORY");
                }

                Game.turn++;
                // Pick Random Event
                Game.currentEvent = EVENTS[Math.floor(Math.random() * EVENTS.length)];
                
                UI.renderTurn();
                
                // Bots Action Logic (Simulated delay)
                if (Game.mode === 'OFFLINE') {
                    Game.players.forEach(p => {
                        if (p.isBot && p.status === 'ALIVE') {
                            setTimeout(() => {
                                BotLogic.act(p, Game.currentEvent);
                            }, 1000 + Math.random() * 2000);
                        }
                    });
                    
                    // Bot Chat (Simulated)
                    if (Math.random() > 0.6) {
                        const talker = alive.filter(p => p.isBot)[Math.floor(Math.random() * alive.filter(p => p.isBot).length)];
                        if(talker) UI.addChat(talker.name, BOT_CHATS.start[Math.floor(Math.random()*BOT_CHATS.start.length)]);
                    }
                }
            },

            resolveAction: (optIdx) => {
                if (Game.me.status !== 'ALIVE') return;

                const opt = Game.currentEvent.options[optIdx];
                let logMsg = "";

                // Apply My Result
                if (opt.type === 'safe') {
                    logMsg = `做出了正确的判断。`;
                } else if (opt.type === 'bad') {
                    let dmg = opt.val;
                    if (Game.me.role === 'BRUTE') dmg = Math.floor(dmg * 0.7); // Brute reduction
                    Game.me.san -= dmg;
                    logMsg = `受到伤害 -${dmg} SAN。`;
                    UI.shakeScreen();
                } else if (opt.type === 'heal') {
                    Game.me.san = Math.min(Game.me.role === 'BRUTE' ? 120 : 100, Game.me.san + opt.val);
                    logMsg = `恢复了理智 +${opt.val} SAN。`;
                } else if (opt.type === 'dead') {
                    Game.me.san = 0;
                    logMsg = `做出了致命的选择。`;
                }

                UI.addLog(`你 ${logMsg}`);
                UI.addChat("我", opt.msg);

                if (Game.me.san <= 0) {
                    Game.me.status = 'DEAD';
                    Game.me.san = 0;
                    UI.addLog(`你已死亡。`);
                }

                UI.updateTeamList();
                
                // Wait for bots then next turn
                document.getElementById('waiting-text').classList.remove('hidden');
                document.getElementById('action-container').classList.add('pointer-events-none', 'opacity-50');
                
                setTimeout(() => {
                    document.getElementById('waiting-text').classList.add('hidden');
                    document.getElementById('action-container').classList.remove('pointer-events-none', 'opacity-50');
                    Game.nextTurn();
                }, 3000);
            },

            sendChat: (e) => {
                e.preventDefault();
                const input = document.getElementById('chat-input');
                const txt = input.value.trim();
                if (!txt) return;
                UI.addChat("我", txt);
                input.value = '';
                
                // Bot might reply?
                if (Game.mode === 'OFFLINE' && Math.random() > 0.5) {
                    setTimeout(() => {
                        const bot = Game.players.filter(p => p.isBot && p.status === 'ALIVE')[0];
                        if (bot) UI.addChat(bot.name, "确实。");
                    }, 1000);
                }
            },

            end: (type) => {
                const modal = document.getElementById('modal-end');
                const icon = document.getElementById('end-icon');
                const title = document.getElementById('end-title');
                const msg = document.getElementById('end-msg');

                modal.classList.remove('hidden');
                if (type === 'VICTORY') {
                    icon.innerHTML = `<i data-lucide="sun" class="w-full h-full text-yellow-500"></i>`;
                    title.innerText = "幸存";
                    title.classList.add('text-green-500');
                    msg.innerText = "你在第13号档案中活了下来。黎明到来了。";
                } else {
                    icon.innerHTML = `<i data-lucide="skull" class="w-full h-full text-red-800"></i>`;
                    title.innerText = "全员阵亡";
                    msg.innerText = "没有人活着离开博物馆。";
                }
                lucide.createIcons();
            }
        };

        const BotLogic = {
            act: (bot, evt) => {
                // Determine success rate based on personality
                let successRate = 0.5;
                if (bot.personality === 'careful') successRate = 0.8;
                if (bot.personality === 'reckless') successRate = 0.3;
                if (bot.role === 'DETECTIVE') successRate += 0.2;

                // Find 'safe' option
                const safeOpt = evt.options.find(o => o.type === 'safe' || o.type === 'heal');
                const others = evt.options.filter(o => o !== safeOpt);
                
                let chosen;
                if (Math.random() < successRate && safeOpt) {
                    chosen = safeOpt;
                } else {
                    chosen = others[Math.floor(Math.random() * others.length)];
                }

                // Apply
                let log = "";
                if (chosen.type === 'bad') {
                    let dmg = chosen.val;
                    if (bot.role === 'BRUTE') dmg = Math.floor(dmg * 0.7);
                    bot.san -= dmg;
                    log = `受伤了 (-${dmg})`;
                    if(Math.random()>0.7) UI.addChat(bot.name, BOT_CHATS.hurt[0]);
                } else if (chosen.type === 'dead') {
                    bot.san = 0;
                    log = `触发即死规则`;
                    UI.addChat(bot.name, BOT_CHATS.dead[0]);
                } else {
                    log = `安全`;
                }

                if (bot.san <= 0) {
                    bot.status = 'DEAD';
                    bot.san = 0;
                    log = "已确认死亡";
                }

                UI.addLog(`${bot.name} ${log}`);
                UI.updateTeamList();
            }
        };

        const UI = {
            showRoleSelection: () => {
                document.getElementById('screen-menu').classList.add('hidden');
                const container = document.getElementById('screen-role');
                container.classList.remove('hidden');
                
                const grid = container.querySelector('.grid');
                grid.innerHTML = Object.values(ROLES).map(r => `
                    <div onclick="Game.selectRole('${r.id}')" class="bg-zinc-900 border border-zinc-700 p-6 rounded hover:border-red-500 hover:bg-zinc-800 cursor-pointer transition group">
                        <i data-lucide="${r.icon}" class="w-12 h-12 mb-4 ${r.color}"></i>
                        <h3 class="text-xl font-bold text-white mb-2">${r.name}</h3>
                        <p class="text-zinc-500 text-sm group-hover:text-zinc-300">${r.desc}</p>
                    </div>
                `).join('');
                lucide.createIcons();
            },

            startGameScreen: () => {
                document.getElementById('screen-role').classList.add('hidden');
                document.getElementById('screen-game').classList.remove('hidden');
                document.getElementById('my-role-display').innerText = ROLES[Game.me.role].name;
                document.getElementById('full-rules-list').innerHTML = RULES.map((r,i) => `<p>${i+1}. ${r}</p>`).join('');
            },

            renderTurn: () => {
                const evt = Game.currentEvent;
                document.getElementById('round-indicator').innerText = Game.turn;
                document.getElementById('mini-rule-text').innerText = RULES[Math.floor(Math.random()*RULES.length)];
                document.getElementById('event-desc').innerText = evt.text;

                const actContainer = document.getElementById('action-container');
                actContainer.innerHTML = '';
                
                evt.options.forEach((opt, idx) => {
                    const btn = document.createElement('button');
                    btn.className = "w-full text-left p-4 bg-zinc-900 border border-zinc-700 hover:bg-zinc-800 hover:border-red-500 transition text-zinc-300 rounded relative overflow-hidden group";
                    btn.innerHTML = `
                        <span class="relative z-10 font-bold group-hover:text-white transition">► ${opt.txt}</span>
                        <div class="absolute inset-0 bg-red-900/20 translate-x-[-100%] group-hover:translate-x-0 transition-transform duration-300"></div>
                    `;
                    btn.onclick = () => Game.resolveAction(idx);
                    actContainer.appendChild(btn);
                });

                UI.updateTeamList();
            },

            updateTeamList: () => {
                const list = document.getElementById('team-list');
                const meSan = document.getElementById('my-san');
                
                meSan.innerText = Game.me.san;
                meSan.parentElement.className = `text-xl font-bold flex items-center gap-1 ${Game.me.san < 30 ? 'text-red-500 animate-pulse' : 'text-white'}`;

                list.innerHTML = Game.players.map(p => {
                    const roleData = ROLES[p.role];
                    const isDead = p.status === 'DEAD';
                    return `
                    <div class="flex items-center justify-between p-2 rounded ${p.isMe ? 'bg-zinc-800 border-l-2 border-red-500' : 'border-b border-zinc-800'} ${isDead ? 'opacity-50 grayscale' : ''}">
                        <div class="flex items-center gap-3">
                            <div class="bg-zinc-950 p-2 rounded border border-zinc-800">
                                <i data-lucide="${isDead ? 'skull' : roleData.icon}" class="w-4 h-4 ${isDead ? 'text-zinc-500' : roleData.color}"></i>
                            </div>
                            <div>
                                <div class="text-sm font-bold ${p.isMe ? 'text-white' : 'text-zinc-400'}">${p.name}</div>
                                <div class="text-[10px] text-zinc-600 uppercase">${roleData.name}</div>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="text-xs font-mono font-bold ${p.san < 30 ? 'text-red-500' : 'text-zinc-500'}">SAN: ${p.san}</div>
                            <div class="text-[10px] ${isDead ? 'text-red-800' : 'text-green-800'}">${p.status}</div>
                        </div>
                    </div>
                    `;
                }).join('');
                lucide.createIcons();
            },

            addChat: (name, msg) => {
                const box = document.getElementById('chat-box');
                const div = document.createElement('div');
                const isMe = name === '我';
                div.className = `msg-bubble ${isMe ? 'msg-right' : 'msg-left'}`;
                div.innerHTML = `<strong class="block text-[10px] opacity-50 mb-1">${name}</strong>${msg}`;
                box.appendChild(div);
                box.scrollTop = box.scrollHeight;
            },

            addLog: (msg) => {
                const log = document.getElementById('game-log');
                const p = document.createElement('p');
                p.innerHTML = `> [T${Game.turn}] ${msg}`;
                log.insertBefore(p, log.firstChild);
            },

            shakeScreen: () => {
                document.body.classList.add('shake');
                setTimeout(() => document.body.classList.remove('shake'), 500);
            },

            toggleRules: () => {
                const m = document.getElementById('modal-rules');
                m.classList.toggle('hidden');
            }
        };

        // Init
        lucide.createIcons();
    </script>
</body>
</html>
